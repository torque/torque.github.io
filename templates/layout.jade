doctype html
block vars
	- var bodyclass = null;
html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(name='viewport', content='width=device-width')
			title
				block title
					= locals.name
			link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
			link(rel='stylesheet', href='/css/layout.css')
			link(rel='stylesheet', href='/css/tomorrow-night-eighties.css')
	body(class=bodyclass)
		.body-wrap
			header.header
				.content-wrap
					block header
						.logo
							h1
								a(href='/')= locals.name
							//- p.description= locals.description
			#content
				.content-wrap
					block content
						h2 Something Has Gone Wrong
			.push
		footer
			.content-wrap
				block footer
					- var theYear = (new Date()).getFullYear()
					span.about Copywrong #{theYear}
					br
					span.poweredby Powered by&nbsp;
						a(href='http://wintersmith.io') Wintersmith
						| . Colorscheme stolen shamelessly from&nbsp;
						a(href='https://github.com/chriskempson/base16') base16-eighties
						| .

		block scripts
