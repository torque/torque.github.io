extends layout

block append vars
	- bodyclass = 'article-detail'

block append head
	link(rel='stylesheet', href='/css/article.css')

block prepend title
	| #{ page.title + " - "}

block content
	article.article
		h2.title!= page.title
		h3.date!= moment(page.date).format( '[Published] MMMM Do, YYYY [<span class="smallcaps">at</span>] HH:mm:ss' )
		section.content!= page.html

block prepend footer
	span
		a.index-link(href=contents.index.url) Â« Index
	br

block append scripts
	script(type="text/javascript", src="/js/footnotemagic.js")
	if page.metadata.useMathJax
		script(type="text/javascript", src="//cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS_HTML")

