@import 'colors.styl'

animation( )
	-webkit-animation arguments
	-moz-animation arguments
	-ms-animation arguments
	animation arguments

transform( )
	-webkit-transform arguments
	-moz-transform arguments
	-ms-transform arguments
	transform arguments

@keyframes fadeIn
	0%
		opacity 0
		transform translateY(10px)
	100%
		opacity 1
		transform translateY(0px)

@keyframes fadeOut
	0%
		opacity 1
		transform translateY(0px)
	100%
		opacity 0
		transform translateY(10px)

.footnoteMagic
	position absolute
	text-align justify
	background-color gray-01 + #070707
	padding 0.15em 0.5em
	z-index 10

	.nib
		position absolute
		bottom 100%
		left 50%
		border solid transparent
		border-bottom-color gray-01 + #070707
		border-width 10px
		margin-left -10px

	&.invisible
		transform scaleY(0)

	&.incoming
		animation fadeIn 0.25s
		display block

	&.outgoing
		animation fadeOut 0.25s
		transform scaleY(0)

.article
	margin 1em 0 1em
	position relative

	table
		border-collapse: collapse;
		margin 1.6em 0

		th, td
			padding 0.25em 0.5em
			border 1px solid gray-02

	pre
		display block
		line-height 1.1
		font-size 90%
		overflow auto
		background-color background + #070707
		margin-bottom 1.8em
		padding 1em

		code
			font-family 'Menlo', monospace
			font-size 100%

		p
			padding 0.1em 0.3em 0.2em
			border-radius 0.3em
			position relative
			top -0.15em
			white-space nowrap


	.title
		font-style italic
		text-align center
		font-weight 400
		margin 0
		// font-size 140%

	.date
		font-variant normal
		text-align center
		font-size 0.8em
		margin 0 0 2em

	blockquote
		margin 1.2em 3em
		padding-left 1em
		font-style italic

	&.intro
		.content
			p
				display inline

		.more
			text-decoration underline
			font-weight 700
			padding-left 0.3em

	.content
		text-align justify

		img
			display block
			margin auto

		a
			color bBlue
			text-decoration none

			&:hover
				text-decoration underline

		.footnote
			position relative
			top -0.5em
			font-size 80%
			color bRed
			z-index 11

		.footnotes
			ol li:target
				color bOrange

			.reversefootnote
				color bRed
