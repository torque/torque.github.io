@import 'colors.styl'

.index
	a, span.block
		display block
		float left
		text-decoration none

		&.last
			border 0
			margin-bottom 0

	li:not(:last-child)
		border-bottom 1px solid gray-01
		margin-bottom -1px

	a
		// color bGreen
		color foreground
		height 100%
		width 100%
		text-indent 1em
		white-space nowrap
		transition background-color 0.2s

		&:hover
			background-color gray-01

	.year-label, .month-label
		width 4em
		font-family serif
		font-variant small-caps
		text-transform lowercase
		font-weight 400
		text-rendering auto
		letter-spacing 1px
		text-align center

	.year-label
		color bGreen

	.month-label
		width 7em
		color bPurple

	ul
		list-style none
		margin 0

		li
			margin 0
